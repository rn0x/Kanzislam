        //- link(rel="stylesheet" href="/css/header.css")
        //- link(rel="stylesheet" href="/css/footer.css")
        //- link(rel="stylesheet" href="/css/fonts.css")
        //- link(rel="stylesheet" href="/css/variables.css")
        link(rel="preload", href="/css/dist/styles.min.css", as="style")
        link(rel="preload", href="/css/fontawesome.all.css", as="style")
        link(rel="stylesheet" href="/css/dist/styles.min.css")
        link(rel="stylesheet" href="/css/fontawesome.all.css")
        link(rel="stylesheet" href="/css/globalAudioPlayer.css")
        script.
            if (localStorage.getItem("theme") == "dark") document.documentElement.setAttribute("data-theme", "dark");
        block stylesheet
    body
        noscript
            p Warning: This website will not function without JavaScript enabled. Please enable JavaScript and refresh the page
            p(lang="ar" dir="rtl") تحذير: هذا الموقع لن يعمل بدون تمكين الجافا سكريبت. يرجى تمكين الجافا سكريبت وتحديث الصفحة
        header
            include ./header.pug
        img(src="/icon/loading.svg" alt="loading")#loading
        #content 
            block content
        include ./footer.pug
        block script
        script(type="module")
            include ../../public/js/main.js